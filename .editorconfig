# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 4

# TypeScript files
[*.ts]
indent_size = 2

# TypeScript JSX files
[*.tsx]
indent_size = 2

# JavaScript files
[*.js]
indent_size = 2

# JavaScript JSX files
[*.jsx]
indent_size = 2

# Vue files
[*.vue]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]

# Python files
[*.py]
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false
